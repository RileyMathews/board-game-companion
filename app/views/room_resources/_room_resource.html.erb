<%= turbo_frame_tag room_resource do %>
  <%= render "shared/card" do %>
    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= room_resource.resource.name %></h5>
    <p id="room_resource_<%= room_resource.id %>_amount" class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= room_resource.amount %></p>
    <%= link_to "edit", edit_room_resource_path(room_resource), class: "btn-primary" %>
  <% end %>
<% end %>
