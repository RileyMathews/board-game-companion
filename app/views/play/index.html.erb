<% content_for :head do %>
  <meta name="turbo-cache-control" content="no-cache">
<% end %>

<h1>Playing <%= @room.game.name %></h1>

<h3>Resources</h3>

<% @resources_by_group.each do |group_name, resources| %>
  <div>
    <h3><%= group_name %></h3>
    <div class="flex gap-2">
      <% resources.each do |user_resource| %>
        <div data-controller="user-room-resource" id="resource-<%= user_resource.id %>">
          <data data-user-room-resource-target="id" id="<%= user_resource.id %>"></data>
          <p
            class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2.5 text-center inline-flex items-center cursor-pointer"
            data-dropdown-toggle="dropdown-<%= user_resource.id %>"
          >
            <%= user_resource.resource.name %>:<span data-user-room-resource-target="output"><%= user_resource.ammount %></span>
            <svg 
              class="w-4 h-4 ml-2 inline" 
              aria-hidden="true" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24" 
              xmlns="http://www.w3.org/2000/svg"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </p>
          <div id="dropdown-<%= user_resource.id %>" class="hidden bg-slate-500 p-4 pt-2 rounded-md">
            <button data-action="click->user-room-resource#decrement" class="text-2xl inline-block text-white border-2 border-red-600 rounded-md px-2 bg-red-500">-1</button>
            <button data-action="click->user-room-resource#increment" class="text-2xl inline-block text-white border-2 border-green-600 rounded-md px-2 bg-green-500">+1</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<h3 class="mt-4">Dice</h3>
<div class="flex gap-2 flex-wrap">
  <% @dice.each do |die| %>
    <div id="<%= die.id %>">
      <h2 
        class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2.5 text-center inline-flex items-center cursor-pointer"
        data-dropdown-toggle="dropdown-dice-<%= die.id %>"
      >
        <%= die.name %>
        <svg 
          class="w-4 h-4 ml-2 inline" 
          aria-hidden="true" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24" 
          xmlns="http://www.w3.org/2000/svg"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </h2>
      <div id="dropdown-dice-<%= die.id %>" class="flex gap-2 flex-wrap hidden bg-slate-500 p-4 rounded-md">
        <% @roll_options.each do |number| %>
          <%= button_to number, roll_dice_path(@room, die, number), method: :post, class: "btn" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<%= button_to "archive rolls", archive_rolls_path(@room), method: :post, class: "btn mb-2" %>

<div class="grid grid-cols-1 gap-2 md:grid-cols-2">
  <div class="border-2 border-slate-500 rounded-md p-2">
    <h2>Roll summary</h2>
    <% @roll_summary.each do |key, value| %>
      <p class="odd:bg-slate-200 px-2"><%= key %>: <%= value %></p>
    <% end %>
  </div>

  <div class="border-2 border-slate-500 rounded-md p-2">
    <% if @roll_results %>
      <h2>You Rolled...</h2>
      <% @roll_results.each do |result| %>
        <p class="odd:bg-slate-200 px-2"><%= result.face.name %></p>
      <% end %>
    <% end %>
  </div>
</div>
