<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <%= render room %>

    <%= link_to 'Edit this room', edit_game_room_path(game, room), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this room', game_room_path(game, room), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to rooms', game_rooms_path(game), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
