<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @room %>

    <% if can? :manage, @room %>
      <p class="bg-slate-200 rounded-md p-4"><%= find_room_url(@room.join_code) %></p>
      <%= link_to 'Edit this room', edit_room_path(@room), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to 'Destroy this room', room_path(@room), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
    <% end %>

    <%= link_to 'Back to rooms', game_rooms_path(@room.game), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
