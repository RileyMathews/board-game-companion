<div id="<%= dom_id game %>">
  <h3 class="text-2xl mt-4"><%= game.name %></h3>
  <p>
    created by player <%= game.created_by.username %>
  </p>
  <div class="flex gap-2">

  <%= link_to 'Rooms', game_rooms_path(game), class: "btn" %>
  <%= link_to 'Dice', game_dice_path(game), class: "btn" %>
  <%= link_to 'Resources', game_resources_path(game), class: "btn" %>
  <%= link_to 'Resource Groups', game_resource_groups_path(game), class: "btn" %>
  <% if can? :manage, game %>
    <%= link_to 'Edit this game', edit_game_path(game), class: "btn" %>
    <%= button_to 'Delete', game, method: :delete, class: "btn" %>
  <% end %>

  </div>
  <hr class="mt-6">
</div>
