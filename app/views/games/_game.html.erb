<div id="<%= dom_id game %>">
  <h3 class="text-2xl mt-4"><%= game.name %></h3>
  <p>
    created by player <%= game.created_by.username %>
  </p>
  <div class="flex gap-2">
  
  <% if can? :manage, game %>
    <%= link_to 'Edit this game', edit_game_path(game), class: "btn" %>
    <%= button_to 'Delete', game, method: :delete, class: "btn" %>
  <% end %>
  
  </div>
  <hr class="mt-6">
</div>
