<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h2 class="text-lg">Sign up</h2>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="my-2">
    <%= render "shared/text_field", f: f, field: :email %>
  </div>

  <div class="my-2">
    <%= render "shared/text_field", f: f, field: :username %>
  </div>

  <div class="my-2">
    <%= render "shared/text_field", f: f, field: :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  </div>

  <div class="my-2">
    <%= render "shared/text_field", f: f, field: :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "Sign Up", class: "btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
