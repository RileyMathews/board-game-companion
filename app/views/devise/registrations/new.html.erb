<div class="mx-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="box">
      <h2 class="text-lg">Sign up</h2>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="my-2">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-text" %>
      </div>

      <div class="my-2">
        <%= f.label :username, class: "label" %>
        <%= f.text_field :username, class: "input-text" %>
      </div>

      <div class="my-2">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "input-text" %>
      </div>

      <div class="my-2">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-text" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign Up", class: "btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
