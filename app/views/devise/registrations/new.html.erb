<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h2 class="text-lg">Sign up</h2>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="my-2">
    <%= render "shared/text_field", f: f, field: :email %>
  </div>

  <div class="my-2">
    <%= render "shared/text_field", f: f, field: :username %>
  </div>

  <div class="my-2">
    <%= render "shared/password_field", f: f, field: :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  </div>

  <div class="my-2">
    <%= render "shared/password_field", f: f, field: :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= render SubmitButtonComponent.new text: "Sign Up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
