<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Resources for <%= @game.name %></h1>
    <% if can? :manage, @game %>
      <%= link_to 'New resource', new_game_resource_path(@game), class: "btn-light" %>
    <% end %>
  </div>

  <div id="resources" class="min-w-full">
    <%= render @resources %>
  </div>
</div>
