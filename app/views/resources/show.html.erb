<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @resource %>

    <% if can? :manage, @resource %>
      <%= link_to 'Edit this resource', edit_resource_path(@resource), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to 'Destroy this resource', resource_path(@resource), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
    <% end %>
    <%= link_to 'Back to resources', game_resources_path(@resource.game), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
