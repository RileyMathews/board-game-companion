<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Faces for <%= @die.name %></h1>
    <%= link_to 'Back to dice', game_dice_path(@die.game), class: "btn-light" %>
    
    <% if can? :manage, @die %>
      <%= link_to 'New face', new_die_face_path(@die), class: "btn-light" %>
    <% end %>
    
  </div>

  <div id="faces" class="min-w-full">
    <%= render @faces %>
  </div>
</div>
