<div id="<%= dom_id face %>">

  <p class="my-5">
    <strong class="block font-medium mb-1"><%= face.name %>: <%= face.count %></strong>
  </p>

  <div class="flex flex-wrap">
    <%= render LinkButtonComponent.new text: "Show this face", href: face %>
    <% if can? :manage, face %>
      <%= render LinkButtonComponent.new text: 'Edit this face', href: edit_face_path(face) %>  
      <%= render "shared/delete_button", text: "Delete", path: face %>
    <% end %>
  </div>
  <hr class="mt-6">
</div>
