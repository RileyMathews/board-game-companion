<div id="<%= dom_id face %>">

  <p class="my-5">
    <strong class="block font-medium mb-1"><%= face.name %>: <%= face.count %></strong>
  </p>

  <div class="flex flex-wrap">
    <%= link_to "Show this face", face, class: "btn-light" %>
    <% if can? :manage, face %>
      <%= link_to 'Edit this face', edit_face_path(face), class: "btn-light" %>
      <%= button_to 'Delete', face, method: :delete, class: "btn-red", form_class: "inline" %>
    <% end %>
  </div>
  <hr class="mt-6">
</div>
