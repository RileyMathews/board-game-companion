<%= form_with(model: [die, face]) do |f| %>
  
  <% if die.errors.any? %>
    <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(face.errors.count, "error") %> prohibited this die from being saved:</h2>
        <ul>
          <% die.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-2">
    <%= f.label :name %>
    <%= f.text_field :name, class: "input-text" %>
  </div>

  <div class="my-2">
    <%= f.label :count %>
    <%= f.text_field :count, class: "input-text" %>
  </div>

  <div class="inline">
    <%= link_to "Cancel", game_dice_path(die.game), class: "btn-primary" %>
    <%= f.submit "Submit", class: "btn-primary" %>
  </div>
<% end %>
