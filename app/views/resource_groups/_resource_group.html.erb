<div class="flex items-center justify-between mt-4" id="<%= dom_id resource_group %>">
  <p class="text-lg"><%= resource_group.name %></p>
  <% if can? :manage, resource_group %>
    <div class="flex gap-2">
      <%= link_to 'Edit', edit_resource_group_path(resource_group), class: "btn" %>
      <%= button_to 'Delete', resource_group_path(resource_group), method: :delete, class: "btn" %>
    </div>
  <% end %>

</div>
<hr class="mt-6">
