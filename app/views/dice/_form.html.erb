<%= turbo_frame_tag die do %>
  <%= form_with(model: [game, die], url: game_dice_index_path(game)) do |f| %>
    
    <% if die.errors.any? %>
      <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(game.errors.count, "error") %> prohibited this die from being saved:</h2>
          <ul>
            <% die.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-2">
      <%= f.label :name %>
      <%= f.text_field :name, class: "input-text" %>
    </div>

    <div class="inline">
      <%= link_to "Cancel", games_path, class: "btn-primary" %>
      <%= f.submit "Submit", class: "btn-primary" %>
    </div>
  <% end %>
<% end %>
