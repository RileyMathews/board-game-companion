<%= turbo_frame_tag die do %>
<div>
  <div class="flex items-center justify-between py-2">
    <p class="text-lg"><%= die.name %></p>
    <div class="flex gap-2">
      <%= link_to "New Face", new_die_face_path(die), class: "btn", data: { turbo_frame: dom_id(die, :face_form) } %>
      <%= link_to "Edit", edit_die_path(die), class: "btn" %>
      <%= button_to "Delete", die_path(die), method: :delete, class: "btn" %>
    </div>
  </div>

  <%= turbo_frame_tag dom_id(die, :face_form) %>
  <div class="bg-slate-100 mb-4 ml-4 mt-2">
    <div class="p-4 flex gap-2">
      <%= turbo_frame_tag dom_id(die, "faces") do %>
        <%= render die.faces, die: die %>
      <% end %>
    </div>
  </div>

  <hr>
</div>
<% end %>
