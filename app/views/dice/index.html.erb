<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Dice for <%= @game.name %></h1>
    <%= link_to 'Back to games', games_path, class: "btn-light" %>
    
    <% if can? :manage, @game %>
      <%= link_to 'New die', new_game_die_path(@game), class: "btn-light" %>
    <% end %>
    
  </div>

  <div id="dice" class="min-w-full">
    <%= render @dice %>
  </div>
</div>
